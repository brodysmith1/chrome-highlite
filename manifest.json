{
  "manifest_version": 3,
  "name": "Highlite",
  "version": "1.0",
  "description": "Highlight and save text snippets with this tiny, secure, and elegant tool. Summarise online articles as you read them.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "storage", "downloads"],
  "host_permissions": ["https://*/*"],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "css": ["css/reset.css", "css/ui.css", "css/dom.css", "css/panel.css", "css/dialog.css"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+H",
        "mac": "Command+H"
      }
    }
  },
  "web_accessible_resources": [
    {
      "matches": ["https://*/*"],
      "resources": [
        "functions.js",
        "html/panel.html",
        "html/dialog.html",
        "html/sprite.html",
        "html/list-item.html",
        "assets/logo/logo.svg"
      ]
    }
  ],
  "icons": {
    "16": "assets/logo/logo@32.png",
    "32": "assets/logo/logo@48.png",
    "48": "assets/logo/logo@128.png",
    "128": "assets/logo/logo@256.png",
    "256": "assets/logo/logo@256.png"
  }
}
