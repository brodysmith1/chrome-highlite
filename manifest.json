{
  "manifest_version": 3,
  "name": "Highlite",
  "version": "1.0.0",
  "author": "brody4004@gmail.com",
  "description": "Highlight and save text snippets with this tiny, secure, and elegant tool. Summarise online articles as you read them.",
  "icons": {
    "16": "_assets/logo/logo@32.png",
    "32": "_assets/logo/logo@48.png",
    "48": "_assets/logo/logo@128.png",
    "128": "_assets/logo/logo@256.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "storage", "downloads"],
  "host_permissions": ["https://*/*"],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "css": ["_css/reset.css", "_css/ui.css", "_css/dom.css", "_css/panel.css", "_css/dialog.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["https://*/*"],
      "resources": [
        "functions.js",
        "_html/panel.html",
        "_html/dialog.html",
        "_html/sprite.html",
        "_html/list-item.html",
        "_assets/logo/logo.svg"
      ]
    }
  ]
}
